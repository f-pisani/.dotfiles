#!/bin/bash

NC="\e[0m" # RESET

# Colors
BLACK="\e[30m"
RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
BLUE="\e[34m"
PURPLE="\e[35m"
CYAN="\e[36m"
WHITE="\e[37m"

# Bold
BBLACK="\e[1;30m"
BRED="\e[1;31m"
BGREEN="\e[1;32m"
BYELLOW="\e[1;33m"
BBLUE="\e[1;34m"
BPURPLE="\e[1;35m"
BCYAN="\e[1;36m"
BWHITE="\e[1;37m"

# Underline
UBLACK="\e[4;30m"
URED="\e[4;31m"
UGREEN="\e[4;32m"
UYELLOW="\e[4;33m"
UBLUE="\e[4;34m"
UPURPLE="\e[4;35m"
UCYAN="\e[4;36m"
UWHITE="\e[4;37m"

# Background
BKGBLACK="\e[40m"
BKGRED="\e[41m"
BKGGREEN="\e[42m"
BKGYELLOW="\e[43m"
BKGBLUE="\e[44m"
BKGPURPLE="\e[45m"
BKGCYAN="\e[46m"
BKGWHITE="\e[47m"

# High Intensity
IBLACK='\033[0;90m'
IRED='\033[0;91m'
IGREEN='\033[0;92m'
IYELLOW='\033[0;93m'
IBLUE='\033[0;94m'
IPURPLE='\033[0;95m'
ICYAN='\033[0;96m'
IWHITE='\033[0;97m'

# Bold High Intensity
BIBLACK='\033[1;90m'
BIRED='\033[1;91m'
BIGREEN='\033[1;92m'
BIYELLOW='\033[1;93m'
BIBLUE='\033[1;94m'
BIPURPLE='\033[1;95m'
BICYAN='\033[1;96m'
BIWHITE='\033[1;97m'

# Background High Intensity
BKGIBLACK='\033[1;100m'
BKGIRED='\033[1;101m'
BKGIGREEN='\033[1;102m'
BKGIYELLOW='\033[1;103m'
BKGIBLUE='\033[1;104m'
BKGIPURPLE='\033[1;105m'
BKGICYAN='\033[1;106m'
BKGIWHITE='\033[1;107m'
